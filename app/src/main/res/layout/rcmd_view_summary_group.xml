<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/common"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:background="@color/colorWindowBackground"
        android:layout_height="@dimen/small_padding_in_view"/>

    <TextView
        android:layout_marginLeft="@dimen/normal_gap_between_view"
        android:layout_marginRight="@dimen/normal_gap_between_view"
        android:id="@+id/summary_goup_title"
        android:layout_below="@+id/top_divider"
        android:text="@string/a_0250"
        android:drawableLeft="@mipmap/ic_left_index"
        style="@style/common.text.title"
        android:drawablePadding="@dimen/small_gap_between_view"
        android:layout_margin="@dimen/normal_gap_between_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/summary_group_more"
        style="@style/common.text.index"
        android:layout_below="@+id/top_divider"
        android:text="@string/a_0135"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/normal_gap_between_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        style="@style/common.button"
        android:layout_below="@+id/summary_goup_title"
        android:id="@+id/middle_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"/>

    <TextView
        android:id="@+id/summary_group_comment"
        android:layout_below="@+id/summary_goup_title"
        android:layout_marginLeft="@dimen/normal_gap_between_view"
        android:layout_marginRight="@dimen/normal_gap_between_view"
        android:layout_marginBottom="@dimen/normal_gap_between_view"
        android:maxLines="3"
        style="@style/common.text.content"
        android:ellipsize="end"
        tools:text="迄今为止史上最好玩的5V5对战竞技类网游，全掌操作体现你完整的对战状态，操作及战斗特效无比带感。可升级诶分解落肯德基富士康将贷款结构is零度空间分类考试……"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>