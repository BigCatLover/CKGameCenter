<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/search_bar"
    android:background="@color/colorPrimary"
    android:layout_height="@dimen/actionbar_size">
    <ImageView
        android:paddingTop="@dimen/big_padding_in_view"
        android:paddingBottom="@dimen/big_padding_in_view"
        android:paddingLeft="@dimen/big_gap_between_view"
        android:paddingRight="@dimen/big_gap_between_view"
        style="@style/common.image.button"
        android:layout_width="wrap_content"
        android:id="@+id/back_left"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src = "@mipmap/ic_back"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/big_gap_between_view"
        android:layout_toLeftOf="@+id/search_ll"
        android:layout_toRightOf="@+id/back_left"
        android:background="@drawable/searchbar_input"
        android:paddingLeft="5dp"
        android:paddingBottom="4dp"
        android:paddingTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/et_search"
            android:paddingLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:imeOptions="actionSearch"
            android:layout_centerInParent="true"
            android:textColor="@color/color_text_normal"
            android:background="@null"
            android:textColorHint="@color/color_sub_text"
            android:textSize="12dp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/delete"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/ic_cancel"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/search_ll"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:text="@string/a_0043"
        android:textSize="14dp"
        style="@style/common.image.button"
        android:paddingTop="@dimen/big_padding_in_view"
        android:paddingBottom="@dimen/big_padding_in_view"
        android:paddingLeft="@dimen/big_gap_between_view"
        android:paddingRight="@dimen/big_gap_between_view"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />

</RelativeLayout>
