<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/small_gap_between_view"
    android:paddingRight="@dimen/small_gap_between_view"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/relate_game_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/small_gap_between_view"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_play" />

    <TextView
        android:id="@+id/relate_game_name"
        style="@style/common.text.subtitle"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="@dimen/small_padding_in_view"
        android:paddingRight="@dimen/small_padding_in_view"
        android:layout_below="@+id/relate_game_icon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        tools:text="王者荣耀" />

    <TextView
        android:id="@+id/relate_game_rank"
        style="@style/common.text.subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relate_game_name"
        android:layout_alignLeft="@+id/relate_game_name"
        android:layout_centerHorizontal="true"
        tools:text="评分:5.3" />

</RelativeLayout>