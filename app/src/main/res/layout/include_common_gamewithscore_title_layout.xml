<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/title_click"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="55dp">
    <ImageView
        android:layout_width="50dp"
        android:scaleType="fitXY"
        android:id="@+id/game_icon"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/lygame_launcher"
        android:layout_height="50dp" />
    <com.jingyue.lygame.widget.DownloadProgessView
        android:layout_width="wrap_content"
        android:id="@+id/exper"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_height="33dp">
    </com.jingyue.lygame.widget.DownloadProgessView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/game_icon"
        android:layout_toLeftOf="@+id/exper"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            android:maxEms="8"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="游戏名称"
            android:id="@+id/game_name"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_below="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="11dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/game_score"
                android:text="@string/a_0081"
                android:textColor="@color/color_sub_text"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/game_score"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/game_score"
                android:textSize="18dp"
                android:id="@+id/avg_score"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorAccent"
                tools:text="8.6"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
