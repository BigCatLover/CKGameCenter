<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/lyg_dialog_vertical_margin"
    android:paddingLeft="@dimen/lyg_dialog_horizontal_margin"
    android:paddingRight="@dimen/lyg_dialog_horizontal_margin"
    android:paddingTop="@dimen/lyg_dialog_vertical_margin"
    android:visibility="visible">

    <include
        android:id="@+id/common_title"
        layout="@layout/include_common_dialog_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_title"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/title_ll"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/question_green" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/point"
                    android:gravity="center"
                    android:text="@string/a_0068"
                    android:textColor="@color/color_text_normal"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/big_padding_in_view"
                    android:src="@mipmap/arrow_bottom" />
            </RelativeLayout>

            <View
                android:layout_below="@+id/title_ll"
                android:id="@+id/split1"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/bg_common" />

            <ScrollView
                android:layout_below="@+id/split1"
                android:visibility="gone"
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/bg_gray"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="1.1dp"
                    android:text="@string/a_0071"
                    android:textColor="@color/color_sub_text"
                    android:textSize="10dp" />
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/title2_ll"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/point1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/question_green" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/point1"
                    android:gravity="center"
                    android:text="@string/a_0069"
                    android:textColor="@color/color_text_normal"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/check1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/big_padding_in_view"
                    android:src="@mipmap/arrow_bottom" />
            </RelativeLayout>

            <View
                android:id="@+id/split2"
                android:layout_below="@+id/title2_ll"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/bg_common" />

            <ScrollView
                android:visibility="gone"
                android:layout_below="@+id/split2"
                android:id="@+id/ll_content1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/bg_gray"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="1.1dp"
                    android:text="@string/a_0072"
                    android:textColor="@color/color_sub_text"
                    android:textSize="10dp" />

            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/title3_ll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/point2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/question_green" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/point2"
                    android:gravity="center"
                    android:text="@string/a_0070"
                    android:textColor="@color/color_text_normal"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/check2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/big_padding_in_view"
                    android:src="@mipmap/arrow_bottom" />
            </RelativeLayout>

            <View
                android:id="@+id/split3"
                android:layout_below="@+id/title3_ll"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/bg_common" />

            <TextView
                android:layout_below="@+id/split3"
                android:id="@+id/ll_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="1.1dp"
                android:text="@string/a_0074"
                android:textColor="@color/color_sub_text"
                android:textSize="10dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>